block content
  .fill
    .content.z-depth-5
      img.logo(src='/tiger_big.png')
      h2(style='color: #F89939;') tiger
      h2 hacks
      h5= info.tigerhacks.dates
      if info.tigerhacks.register
        a.btn-large(href=info.tigerhacks.register.link)= info.tigerhacks.register.title
      else
        h5 More information coming soon!
      br
      .row
        a(href='mailto:muengrtigerhacks@missouri.edu' target='_blank')
          i.fa.fa-2x.fa-envelope-square(aria-hidden='true')
        a(href='https://twitter.com/tigerhackshd' target='_blank')
          i.fa.fa-2x.fa-twitter-square(aria-hidden='true')
        a(href='http://facebook.com/tigerhacks' target='_blank')
          i.fa.fa-2x.fa-facebook-square(aria-hidden='true')
        a(href='https://instagram.com/tigerhacks' target='_blank')
          i.fa.fa-2x.fa-instagram(aria-hidden='true')
  div(id='aboutsec hide-mobile')
    #about.header(data-target='#aboutinfo')
      h2 About
    #aboutinfo.container.row
      .col.s12.m4
        h5.center.info-header What is TigerHacks?
        p= info.tigerhacks.about
      .col.s12.m4
        h5.center.info-header What is a hackathon?
        p= info.tigerhacks.hackathon
      .col.s12.m4
        h5.center.info-header Theme
        p= info.tigerhacks.theme
    .container
      hr
  #prizessec.hide-mobile
    #prizes.header(data-target='#prizesinfo')
      h2 Prizes
    #prizesinfo.container
      if prizes
        table
          thead
            tr
              th Category
              th.right Prize
          tbody
            each prize in prizes
              tr
                td= prize.title
                td.right= prize.reward
      else
        h4 Prizes coming soon
      hr
  #schedulesec.hide-mobile
    #schedule.header(data-target='#scheduleinfo')
      h2 schedule
    #scheduleinfo.row.container
      each date in Object.keys(schedule)
        div(class='col s12 m' + (12/Object.keys(schedule).length))
          h5= date
          each event in schedule[date]
            .row
              .col.s12
                .card.schedule
                  .card-content
                    p= event.time.toDate().toLocaleTimeString('en-US', {timeZone: 'America/Chicago', hour: 'numeric', minute: 'numeric'})
                    span.card-title= event.title
                    if event.location && event.location != ''
                      p= '@ ' + event.location
                  .card-reveal
                    p= event.time.toDate().toLocaleTimeString('en-US', {timeZone: 'America/Chicago', hour: 'numeric', minute: 'numeric'})
                    span.card-title= event.title
                    if event.location && event.location != ''
                      p= event.location
                    p= event.description
    .container
      hr
  #sponsorssec.hide-mobile
    #sponsors.header(data-target='#sponsorinfo')
      h2 Sponsors
    #sponsorinfo.container
      .row
        if sponsors
          each level in Object.keys(sponsors)
            .col.s12
              h4.sponsor-header= level
              .row
                each sponsor in sponsors[level]
                  div(class='col s' + Math.max(3, 12/sponsors[level].length))
                    .card
                      .card-image.waves-effect.waves-block.waves-light
                        a(href=sponsor.website target='_blank')
                          img(src=sponsor.image)
                      .card-content
                        p= sponsor.description
        else
          h3 Our sponsors aren&apos;t finalized for 2019, check back soon!
      center
        a.waves-effect.waves-light.btn-large(href='mailto:tigerhackshd@gmail.com' target='_blank') Sponsor us!
      hr
  #tigertalkssec.hide-mobile
    #tigertalks.header(data-target='#tigertalksinfo')
      h2 TigerTalks
    #tigertalksinfo.container.row
      .col.s12
        .row
          .col.s12.m4
            h5.center.info-header About TigerTalks
            p= info.tigertalks.about
          .col.s12.m4
            h5.center.info-header Food and Prizes
            p= info.tigertalks.prizes
          .col.s12.m4
            h5.center.info-header Date and Location
            p= info.tigertalks.location
        center
          if info.tigertalks.register
            a.btn-large(href=info.tigertalks.register.link target='_blank')= info.tigertalks.reigster.title
          else
            h5 More information coming soon!
      hr
